<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	<screen id="start" controller="net.carriercommander.screen.StartScreenControl">
		<layer id="background" childLayout="center">
			<image filename="Interface/Screens/start/background.png"></image>
		</layer>
		<layer id="foreground" childLayout="vertical">
			<panel id="panel_top" height="25%" width="75%" align="center" childLayout="center">
				<effect>
					<onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true" />
				</effect>
				<text text="Carrier Commander" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
			</panel>
			<panel id="panel_mid" height="50%" width="75%" align="center" childLayout="vertical">
				<control name="button" label="Start Action Game" id="StartActionGameButton" width="50%" align="center" valign="center" visibleToMouse="true">
					<interact onClick="startGame(load, action)" />
					<effect>
						<onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="100" inherit="true" />
					</effect>
				</control>
				<control name="button" label="Start Strategy Game" id="StartStrategyGameButton" width="50%" align="center" valign="center" visibleToMouse="true">
					<interact onClick="startGame(load, strategy)" />
					<effect>
						<onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="200" inherit="true" />
					</effect>
				</control>
				<control name="button" label="Start Network Game" id="StartNetworkGameButton" width="50%" align="center" valign="center" visibleToMouse="true">
					<interact onClick="startGame(load, network)" />
					<effect>
						<onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="300" inherit="true" />
					</effect>
				</control>
			</panel>
			<panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="vertical">
				<control name="button" label="Quit" id="QuitButton" align="center" valign="center" visibleToMouse="true">
					<interact onClick="quitGame()" />
					<effect>
						<onStartScreen name="move" mode="in" direction="bottom" length="300" startDelay="600" inherit="true" />
					</effect>
				</control>
			</panel>
		</layer>
	</screen>
</nifty>
