					<panel childLayout="vertical">
						<panel id="walrus1Button" style="unselected" childLayout="vertical">
							<image filename="Interface/Screens/hud/walrus.png" width="42" height="44" />
							<interact onClick="selectWalrus(1)" />
						</panel>
						<panel id="walrusLaserButton" style="unselected" childLayout="vertical">
							<image filename="Interface/Screens/hud/laser.png" width="42" height="44" />
							<interact onClick="setWalrusAutoPilot()" />
						</panel>
					</panel>
					<panel childLayout="vertical">
						<panel id="walrus2Button" style="unselected" childLayout="vertical">
							<image filename="Interface/Screens/hud/walrus.png" width="42" height="44" />
							<interact onClick="selectWalrus(2)" />
