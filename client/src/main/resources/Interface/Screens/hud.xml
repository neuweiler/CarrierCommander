				<panel id="weaponsLaserControls" visible="false" childLayout="horizontal">
					<text text="Weapons Laser" font="Interface/Fonts/Default.fnt" />
				</panel>
				<panel id="weaponsFlaresControls" visible="false" childLayout="horizontal">
