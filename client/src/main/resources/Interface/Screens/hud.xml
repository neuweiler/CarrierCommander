						<panel id="walrusAutopilotButton" style="unselected" childLayout="vertical">
							<image filename="Interface/Screens/hud/autoPilot.png" style="unselected"/>
							<interact onClick="setWalrusAutoPilot()" />
						</panel>
					</panel>
					<panel childLayout="vertical">
						<image filename="Interface/Screens/hud/centerRudder.png" style="unselected">
							<interact onClick="walrusStop(rudder)" />
						</image>
						<image filename="Interface/Screens/hud/link.png" style="unselected">
							<interact onClick="walrusLink()" />
						</image>
					</panel>
					<panel childLayout="vertical" style="infoBox">
						<text text="" id="walrusPosition" style="infoText" />
						<text text="" id="walrusHeading" style="infoText" />
						<text text="" id="walrusIsland" style="infoText" />
					</panel>
					<panel id="walrusFuel" childLayout="horizontal">
						<image filename="Interface/Screens/hud/fuel.png" />
					</panel>
					<panel id="walrusThrottle" childLayout="horizontal">
						<image filename="Interface/Screens/hud/speed.png" />
						<interact onClick="setWalrusSpeed()" />
					</panel>
					<panel childLayout="vertical">
						<image filename="Interface/Screens/hud/radar.png" style="unselected" width="42" height="44" >
							<interact onClick="toggleWalrusRadar()" />
						</image>
						<image filename="Interface/Screens/hud/rearView.png" style="unselected">
							<interact onClick="toggleRearView()" />
						</image>
					</panel>
				</panel>
				<panel id="walrusMapControls" visible="false" childLayout="horizontal">
